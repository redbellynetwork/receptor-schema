{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wholesale Investor Credential",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/redbellynetwork/receptor-schema/refs/heads/main/schemas/json-ld/WholesaleInvestor.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/redbellynetwork/receptor-schema/refs/heads/main/schemas/json/WholesaleInvestorCredential.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "certificateNumber",
        "jurisdiction",
        "grossIncome",
        "netAssets",
        "validUntil",
        "accountantDetails"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID of the credential subject"
        },
        "name": {
          "type": "string",
          "description": "Name of the credential subject"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the credential subject"
        },
        "certificateNumber": {
          "type": "string",
          "description": "Unique number of the certificate issued"
        },
        "jurisdiction": {
          "type": "string",
          "description": "Jurisdiction for which the credential applies"
        },
        "grossIncome": {
          "type": "number",
          "description": "Gross income of the credential subject in the jurisdiction currency"
        },
        "netAssets": {
          "type": "number",
          "description": "Net assets of the credential subject in the jurisdiction currency"
        },
        "validUntil": {
          "type": "integer",
          "minimum": 19000101,
          "maximum": 22251231,
          "description": "Date until which the credential is valid, in YYYYMMDD format"
        },
        "accountantDetails": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "certifyingBody": {
              "type": "string"
            },
            "licenceNumber": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "certifyingBody",
            "licenceNumber"
          ],
          "description": "Details of the accountant certifying the investor's status"
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "attachmentType": {
                "type": "string"
              },
              "contentUrl": {
                "type": "string",
                "format": "uri"
              },
              "contentSize": {
                "type": "string"
              },
              "encodingFormat": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "contentUrl",
              "encodingFormat"
            ]
          },
          "description": "Additional documentation or evidence attached to the credential"
        }
      }
    }
  }
}