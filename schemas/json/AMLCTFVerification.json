{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/redbellynetwork/receptor-schema/refs/heads/main/schemas/json-ld/kyc.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/redbellynetwork/receptor-schema/refs/heads/main/schemas/json/AMLCTFVerification.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuer",
    "issuanceDate",
    "expirationDate",
    "credentialSubject",
    "proof"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "amlCheckStatus", "ctfCheckStatus"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri",
          "description": "Identifier for the subject of the credential."
        },
        "amlCheckStatus": {
          "type": "string",
          "enum": ["passed", "failed", "pending"],
          "description": "Result of the AML check."
        },
        "ctfCheckStatus": {
          "type": "string",
          "enum": ["passed", "failed", "pending"],
          "description": "Result of the CTF check."
        },
        "jurisdiction": {
          "type": "string",
          "description": "Jurisdiction where the checks were performed."
        },
        "pepStatus": {
          "type": "boolean",
          "description": "Indicates if the subject is a Politically Exposed Person (PEP)."
        },
        "sanctionsCheck": {
          "type": "boolean",
          "description": "Indicates if the subject is on a sanctions list."
        },
        "monitoringStatus": {
          "type": "string",
          "enum": ["active", "inactive"],
          "description": "Status of ongoing monitoring for compliance."
        }
      }
    },
    "proof": {
      "type": "object",
      "description": "Cryptographic proof of the credential.",
      "required": [
        "type",
        "created",
        "proofPurpose",
        "verificationMethod",
        "jws"
      ],
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of proof mechanism used."
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation date and time of the proof."
        },
        "proofPurpose": {
          "type": "string",
          "description": "Purpose of the proof, such as 'assertionMethod'."
        },
        "verificationMethod": {
          "type": "string",
          "format": "uri",
          "description": "Identifier for the verification method."
        },
        "jws": {
          "type": "string",
          "description": "The JSON Web Signature (JWS)."
        }
      }
    }
  }
}
